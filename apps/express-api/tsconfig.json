{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"incremental": false,
		"isolatedModules": true,
		"lib": [
			"es2022",
			"DOM",
			"DOM.Iterable"
		],
		"noUncheckedIndexedAccess": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2022",
		"plugins": [
			{
				"name": "next"
			}
		],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"allowJs": false,
		"noEmit": true,
		"outDir": "./dist/"
	},
	"include": [
		"src/**/*",
		"database/**/*",
		"environment.d.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
